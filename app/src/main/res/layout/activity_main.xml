<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundColor"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Иконка -->
    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/quiza_logo_1"
        android:layout_marginTop="110dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="100dp" />

    <!-- Кнопка "Играть" -->
    <RelativeLayout
        android:id="@+id/play_button"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_24"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ИГРАТЬ"
            android:textColor="?attr/text"
            android:textSize="24sp"
            android:fontFamily="@font/alegreya_sans"
            android:gravity="center" />
    </RelativeLayout>

    <!-- Контейнер для двух кнопок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <!-- Кнопка "Правила" -->
        <RelativeLayout
            android:id="@+id/rules_button"
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rectangle_23"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ПРАВИЛА"
                android:textSize="22sp"
                android:fontFamily="@font/alegreya_sans"
                android:textColor="?attr/text"
                android:gravity="center" />
        </RelativeLayout>

        <!-- Кнопка "Смена темы" -->
        <RelativeLayout
            android:id="@+id/theme_button"
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:background="@drawable/rectangle_231"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="СМЕНА ТЕМЫ"
                android:textSize="22sp"
                android:fontFamily="@font/alegreya_sans"
                android:textColor="?attr/text"
                android:gravity="center" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
